{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"typeAcquisition": {
		"enable": true
	}
}
